<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.eCommerce.Views.ConfigurationView"
             Title="Configuration">
    <StackLayout>
        <Label Text="Tax Rate:" />
        <Entry Text="{Binding tax_input}" Keyboard="Numeric" />
        <Button Text="Save" Clicked="SetTaxClicked" />
        <Button Text="Go Back" Clicked="CancelClicked" />
    </StackLayout>
</ContentPage>

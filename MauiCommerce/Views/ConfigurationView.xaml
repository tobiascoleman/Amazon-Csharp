<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.eCommerce.Views.ConfigurationView"
             Title="Configuration">
    <VerticalStackLayout Padding="20">
        <Label Text="Set Tax Rate (%)" FontSize="Medium"/>
        <Entry Placeholder="Enter tax rate" Keyboard="Numeric" Text="{Binding TaxRate}"/>
        <Button Text="Save" Command="{Binding SaveTaxRateCommand}"/>
    </VerticalStackLayout>
</ContentPage>

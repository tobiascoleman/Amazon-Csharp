<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiCommerce.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiCommerce"
    xmlns:views="clr-namespace:Maui.eCommerce.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiCommerce">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate views:InventoryManagementView}"
        Route="InventoryManagement" />
    <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate views:ProductDetails}"
        Route="Product" />
    <ShellContent
        Title="Shop"
        ContentTemplate="{DataTemplate views:ShoppingManagementView}"
        Route="ShoppingManagement" />
    <ShellContent
        Title="Shop"
        ContentTemplate="{DataTemplate views:CheckoutView}"
        Route="Checkout"    />
    <ShellContent
        Title="Configuration"
        ContentTemplate="{DataTemplate views:ConfigurationView}"
        Route="Configuration" />
</Shell>
